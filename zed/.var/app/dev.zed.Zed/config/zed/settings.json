{
  "assistant": {
    "version": "2",
    "provider": {
      "default_model": "gpt-4o",
      "name": "openai"
    }
  },
  "buffer_font_family": "Iosevka",
  "buffer_font_size": 16,
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "format_on_save": "off",
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "dock": "right",
    "indent_size": 7
  },
  "relative_line_numbers": true,
  "restore_on_startup": "none",
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "button": false,
    "dock": "right"
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Dark",
    "mode": "dark"
  },
  "toolbar": {
    "quick_actions": false
  },
  "ui_font_size": 16,
  // "use_system_path_prompts": false,
  "vim": {
    "use_smartcase_find": true
  },
  "vim_mode": true
}
