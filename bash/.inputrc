#
# Behaviour
#

# Enable vi-style navigation
set editing-mode vi
set show-mode-in-prompt on

# Disable the bell
set bell-style none

# Enable bracketed paste mode
set enable-bracketed-paste on

# Reduce wait time for mappings
set keyseq-timeout 50

# Allow the command prompt to wrap to the next line
set horizontal-scroll-mode off

# Enable 8-bit input
set meta-flag on
set input-meta on
set convert-meta off
set output-meta on

#
# Look & Feel
#

# Enable colors
set colored-stats on
set visible-stats on
set mark-symlinked-directories on
set colored-completion-prefix on

# Highlight active region (Readline â‰¥ 8.1)
set enable-active-region on
set active-region-start-color "\e[38;5;39m"
set active-region-end-color "\e[0m"

#
# Completion
#

# Blink the matching parenthesis when typing
set blink-matching-paren on

# Complete the word correctly at any cursor position
set skip-completed-text on

# Show all ambiguous completions immediately
set show-all-if-ambiguous on

# First completion inserts common prefix instead of a match
set menu-complete-display-prefix on

# Match case-insensitive
set completion-ignore-case on

# Treat hyphens and underscores as equivalent
set completion-map-case on

# Increase threshold for completion query
set completion-query-items 1000

#
# Mappings
#

# Up/Down arrows match history with prefix
"\e[A":history-search-backward
"\e[B":history-search-forward

# Tab brings completion menu
TAB:menu-complete
