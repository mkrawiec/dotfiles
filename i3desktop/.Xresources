! ------------------------------------------------------------------------------
! XFT rendering
! ------------------------------------------------------------------------------
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb


! ------------------------------------------------------------------------------
! ROFI configuration
! ------------------------------------------------------------------------------
rofi.font: Iosevka Medium 11
rofi.bw: 3

! Colorscheme
rofi.color-enabled: true
rofi.color-window: #5e8d87, #8abeb7, #8abeb7
rofi.color-normal: #5e8d87, #8abeb7, #425059, #8abeb7, #5e8d87
rofi.color-active: #5f819d, #c5c8c6, #8c9440, #81a2be, #5f819d
rofi.color-urgent: #a54242, #c5c8c6, #85678f, #cc6666, #a54242
