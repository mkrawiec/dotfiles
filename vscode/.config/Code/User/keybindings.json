[
  // Global keybindings
  {
    "key": "capslock",
    "command": "mkrawiec.showSidebarMenu",
    "args": "explorer",
    "when": "filesExplorerFocus"
  },
  {
    "key": "capslock",
    "command": "mkrawiec.showSidebarMenu",
    "args": "search",
    "when": "searchViewletFocus"
  },
  {
    "key": "capslock",
    "command": "mkrawiec.showSidebarMenu",
    "when": "sideBarFocus && !filesExplorerFocus && !searchViewletFocus"
  },
  {
    "key": "capslock",
    "command": "mkrawiec.showSidebarMenu",
    "args": "terminal",
    "when": "terminalFocus"
  },
  {
    "key": "space",
    "command": "whichkey.show",
    "when": "!inputFocus && !listFocus"
  },
  {
    "key": "ctrl+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen"
  },
  // Window navigation
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  // List navigation
  {
    "key": "ctrl+n",
    "command": "list.focusDown",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "ctrl+p",
    "command": "list.focusUp",
    "when": "listFocus && !inputFocus"
  },
  // Quick open
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+c",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+[",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+v",
    "command": "workbench.action.alternativeAcceptSelectedQuickOpenItem",
    "when": "inQuickOpen"
  },
  // Alter between buffers
  {
    "key": "ctrl+6",
    "command": "-workbench.action.focusSixthEditorGroup"
  },
  {
    "key": "ctrl+6",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
  },
  // Breadcrumbs
  {
    "key": "-",
    "command": "breadcrumbs.focusPreviousWithPicker",
    "when": "breadcrumbsActive && breadcrumbsVisible && listFocus"
  },
  {
    "key": "ctrl+c",
    "command": "breadcrumbs.selectEditor",
    "when": "breadcrumbsActive && breadcrumbsVisible"
  },
  // Autocomplate
  {
    "key": "ctrl+x ctrl+o",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && editorFocus && !editorReadonly"
  },
  {
    "key": "ctrl+space",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  },
  // Hide sidebar
  {
    "key": "ctrl+h",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus"
  },
  {
    "key": "enter",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus && listFocus"
  },
]
